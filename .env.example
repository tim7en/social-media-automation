# Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_default_voice_id

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/social_automation
REDIS_URL=redis://localhost:6379/0

# Social Media API Keys
# YouTube/Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token
YOUTUBE_API_KEY=your_youtube_api_key

# Facebook/Instagram
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# TikTok
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# Alternative: MinIO (for local/self-hosted storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=social-media-content

# Application Configuration
SECRET_KEY=your_super_secret_key_here
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Content Generation Settings
DEFAULT_VIDEO_DURATION=60
MAX_VIDEO_SIZE_MB=50
CONTENT_OUTPUT_DIR=/tmp/generated_content

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# AI Avatar Configuration (Optional)
HEYGEN_API_KEY=your_heygen_api_key
D_ID_API_KEY=your_d_id_api_key

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
