# Environment Configuration for Social Media Automation Platform
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION SETTINGS
# ================================
# IMPORTANT: Change SECRET_KEY in production!
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
DEBUG=True
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/social_automation

# SQLite (for development/testing)
# DATABASE_URL=sqlite:///./social_automation.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# AI SERVICES
# ================================
# OpenAI (required for content generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (optional alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs (required for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# ================================
# SOCIAL MEDIA APIS
# ================================
# Google/YouTube
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
YOUTUBE_API_KEY=your_youtube_api_key

# Facebook/Instagram
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# TikTok
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Twitter/X (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn (optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ================================
# STORAGE CONFIGURATION
# ================================
# AWS S3 (recommended for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# MinIO (self-hosted alternative)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=social-media-content
MINIO_SECURE=False

# Local storage settings
CONTENT_OUTPUT_DIR=/tmp/generated_content
MAX_VIDEO_SIZE_MB=50
TEMP_FILE_CLEANUP_HOURS=24

# ================================
# CONTENT GENERATION SETTINGS
# ================================
DEFAULT_VIDEO_DURATION=60
MAX_CONTENT_LENGTH=10000
SUPPORTED_VIDEO_FORMATS=["mp4", "mov", "avi"]
SUPPORTED_IMAGE_FORMATS=["jpg", "jpeg", "png", "gif"]
SUPPORTED_AUDIO_FORMATS=["mp3", "wav", "aac"]

# ================================
# SECURITY SETTINGS
# ================================
# Rate limiting (requests per period)
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=900

# Request size limits
MAX_REQUEST_SIZE_MB=10
MAX_FILE_UPLOAD_SIZE_MB=100

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# CORS settings (use specific domains in production)
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ================================
# PERFORMANCE SETTINGS
# ================================
# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000

# Background processing
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIMEOUT=300
CELERY_WORKER_PROCESSES=4

# Connection timeouts
HTTP_TIMEOUT_SECONDS=30
DB_TIMEOUT_SECONDS=30
REDIS_TIMEOUT_SECONDS=5

# ================================
# MONITORING & LOGGING
# ================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Sentry error tracking (optional but recommended for production)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Prometheus metrics (optional)
ENABLE_METRICS=True
METRICS_PORT=9090

# ================================
# AI AVATAR SERVICES (OPTIONAL)
# ================================
# HeyGen
HEYGEN_API_KEY=your_heygen_api_key

# D-ID
D_ID_API_KEY=your_d_id_api_key

# Synthesia
SYNTHESIA_API_KEY=your_synthesia_api_key

# ================================
# WEBHOOK CONFIGURATION
# ================================
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT_SECONDS=30

# Platform-specific webhook verification
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_facebook_verify_token
YOUTUBE_WEBHOOK_SECRET=your_youtube_webhook_secret

# ================================
# NOTIFICATION SETTINGS
# ================================
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#social-media-automation

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable specific features
ENABLE_AI_AVATARS=False
ENABLE_VOICE_SYNTHESIS=True
ENABLE_AUTO_POSTING=True
ENABLE_ANALYTICS_COLLECTION=True
ENABLE_CONTENT_MODERATION=True
ENABLE_PERFORMANCE_MONITORING=True

# Platform-specific features
ENABLE_YOUTUBE_INTEGRATION=True
ENABLE_INSTAGRAM_INTEGRATION=True
ENABLE_FACEBOOK_INTEGRATION=True
ENABLE_TIKTOK_INTEGRATION=False
ENABLE_TWITTER_INTEGRATION=False
ENABLE_LINKEDIN_INTEGRATION=False

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Only used in development mode
DEV_AUTO_RELOAD=True
DEV_LOG_SQL_QUERIES=False
DEV_MOCK_EXTERNAL_APIS=False
DEV_SKIP_AUTH=False
DEV_PRESERVE_TEMP_FILES=False

# Testing configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_SKIP_SLOW_TESTS=False

# ================================
# BACKUP CONFIGURATION
# ================================
# Automatic backup settings
BACKUP_ENABLED=True
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ================================
# SCALING CONFIGURATION
# ================================
# Auto-scaling settings (for cloud deployments)
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# ================================
# ADVANCED SETTINGS
# ================================
# Content moderation
CONTENT_MODERATION_STRICT=False
BANNED_KEYWORDS=["spam", "inappropriate"]
AUTO_MODERATE_COMMENTS=True

# Analytics and reporting
ANALYTICS_RETENTION_DAYS=365
ENABLE_REAL_TIME_ANALYTICS=True
ANALYTICS_BATCH_SIZE=1000

# API versioning
API_VERSION=v1
DEPRECATION_WARNINGS=True
LEGACY_API_SUPPORT=True

# International settings
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en", "es", "fr", "de", "it", "pt", "ja", "ko", "zh"]

# Custom branding
PLATFORM_NAME="Social Media Automation Platform"
PLATFORM_LOGO_URL=https://your-domain.com/logo.png
PLATFORM_COLOR_SCHEME=blue

# ================================
# SECURITY ADDITIONAL SETTINGS
# ================================
# IP whitelisting (comma-separated)
ALLOWED_IPS=
BLOCKED_IPS=

# API key restrictions
API_KEY_EXPIRY_DAYS=365
REQUIRE_API_KEY_ROTATION=False

# Session management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=5

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=True
PASSWORD_EXPIRY_DAYS=90

